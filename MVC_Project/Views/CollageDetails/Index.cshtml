@model IEnumerable<MVC_Project.Models.CollageDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if ((string)TempData.Peek("role") == "admin")
    {
    @Html.ActionLink("Create New", "Create") 
    @Html.ActionLink("View Students", "viewstd")

    }
</p>
<p>
    @if ((string)TempData["fail"]!=null)
    {
       <h3 class="alert-danger">@TempData["fail"].ToString()</h3>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addrress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstablishIn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CollageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addrress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstablishIn)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            @if((string)TempData.Peek("role")=="admin")
            { 
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 

            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                @Html.ActionLink("AddBranches", "AddBranches", new { id = item.Id })

            }
            @if ((string)TempData.Peek("role") == "user")
            {
                @Html.ActionLink("ViewBranches", "ViewBranches", new { id = item.Id })

            }
        </td>
    </tr>
}

</table>
